begin
  require "hirb"
  Hirb.enable
rescue LoadError => err
  warn "Couldn't load Hirb: #{err}"
end

def sql_log(verbose=true)
  ActiveRecord::Base.logger = verbose ? Logger.new(STDOUT) : RAILS_DEFAULT_LOGGER
end

def route(path, data={})
  # ActionController::Routing::Routes.recognize_path path, data # Old Rails
  Rails.application.routes.recognize_path data
end
